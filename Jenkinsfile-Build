pipeline {
    agent none
    stages {
        stage('Build') {
            agent { docker { image 'python:3' } }
            steps {
                withEnv(["HOME=${env.WORKSPACE}"]) {
                    sh 'pip3 install --user psutil'
                    sh 'python3 -m unittest discover -p "*_test.py"'
                }
            }
        }
    }
}
